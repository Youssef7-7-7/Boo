<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <VideoView
        android:id="@+id/VView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageTitle"
        android:layout_width="363dp"
        android:layout_height="247dp"
        android:contentDescription="@string/boo_title_of_app"
        app:layout_constraintEnd_toEndOf="@id/VView"
        app:layout_constraintStart_toStartOf="@id/VView"
        app:layout_constraintTop_toTopOf="@id/VView"
        app:srcCompat="@drawable/logono" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="@id/VView"
        app:layout_constraintEnd_toEndOf="@id/VView"
        app:layout_constraintStart_toStartOf="@id/VView">

        <ImageView
            android:id="@+id/glog"
            android:layout_width="85dp"
            android:layout_height="87dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="30dp"
            android:layout_weight="1"
            android:contentDescription="@string/google_login_button"
            app:srcCompat="@drawable/glogo" />

        <ImageView
            android:id="@+id/fblog"
            android:layout_width="84dp"
            android:layout_height="87dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:contentDescription="@string/facebook_login_button"
            app:srcCompat="@drawable/fblogo" />

        <ImageView
            android:id="@+id/iglog"
            android:layout_width="85dp"
            android:layout_height="87dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:layout_weight="1"
            android:contentDescription="@string/instalogin"
            android:onClick="after_click_login"
            app:srcCompat="@drawable/iglogo" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>